{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "templateRootUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/mspnp/template-building-blocks/master/",
      "metadata": {
        "description": "Root path for templates"
      }
    },
    "parameterRootUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/mspnp/reference-architectures/master/",
      "metadata": {
        "decription": "Root path for parameters"
      }
    }
  },
  "variables": {
    "templates": {
      "deployment": {
        "loadBalancer": "[uri(parameters('templateRootUri'), 'templates/buildingBlocks/loadBalancer-backend-n-vm/azuredeploy.json')]"
      },
      "parameter": {
        "loadBalancer": "[uri(parameters('parameterRootUri'), 'guidance-iaas-ad/Parameters/loadBalancer-adfs.parameters.json')]"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-iaas-ad-adfs-lb-deployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.loadBalancer]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.loadBalancer]"
        }
      }
    }
  ],
  "outputs": {
  }
}
