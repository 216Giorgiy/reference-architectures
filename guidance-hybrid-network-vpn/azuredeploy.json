{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "templateRootUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/mspnp/template-building-blocks/master/",
      "metadata": {
        "description": "Root path for templates"
      }
    },
    "parameterRootUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/mspnp/reference-architectures/master/guidance-hybrid-network-vpn/parameters/",
      "metadata": {
        "decription": "Root path for parameters"
      }
    },
    "sharedKey": {
      "type": "securestring"
    }
  },
  "variables": {
    "templates": {
      "deployment": {
        "virtualNetwork": "[uri(parameters('templateRootUri'), 'templates/buildingBlocks/vnet-n-subnet/azuredeploy.json')]",
        "virtualNetworkGateway": "[uri(parameters('templateRootUri'), 'templates/buildingBlocks/vpn-gateway-vpn-connection/azuredeploy.json')]"
      },
      "parameter": {
        "virtualNetwork": "[uri(parameters('parameterRootUri'), 'virtualNetwork.parameters.json')]",
        "virtualNetworkGateway": "[uri(parameters('parameterRootUri'), 'virtualNetworkGateway.parameters.json')]"
      }
    },
    "parametersTemplate": "[concat(parameters('parameterRootUri'), '../parameterLink-resolver.json')]",
    "vpnParametersDeploymentName": "vpn-params-Deployment"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-hybrid-vnet-deployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.virtualNetwork]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.virtualNetwork]"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[variables('vpnParametersDeploymentName')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('parametersTemplate')]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.virtualNetworkGateway]"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-hybrid-vpn-deployment",
      "dependsOn": [
        "ra-hybrid-vnet-deployment",
        "[variables('vpnParametersDeploymentName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.virtualNetworkGateway]"
        },
        "parameters": {
          "virtualNetworkSettings": {
            "value": "[reference(variables('vpnParametersDeploymentName')).outputs.virtualNetworkSettings.value]"
          },
          "virtualNetworkGatewaySettings": {
            "value": "[reference(variables('vpnParametersDeploymentName')).outputs.virtualNetworkGatewaySettings.value]"
          },
          "connectionSettings": {
            "value": "[reference(variables('vpnParametersDeploymentName')).outputs.connectionSettings.value]"
          },
          "protectedSettings": {
            "value": {
              "sharedKey": "[parameters('sharedKey')]"
            }
          }
        }
      }
    }
  ],
  "outputs": {
  }
}
