{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "buildingBlocksRootUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/mspnp/template-building-blocks/master/",
      "metadata": {
        "description": "Root path for templates"
      }
    },
    "parameterRootUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/mspnp/reference-architectures/master/guidance-hybrid-network-secure-vnet/parameters/",
      "metadata": {
        "decription": "Root path for parameters"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": null
    },
    "sshPublicKey": {
      "type": "securestring",
      "defaultValue": null
    },
    "sharedKey": {
      "type": "securestring"
    }
  },
  "variables": {
    "templates": {
      "deployment": {
        "virtualNetwork": "[concat(parameters('buildingBlocksRootUri'), 'templates/buildingBlocks/vnet-n-subnet/azuredeploy.json')]",
        "loadBalancer": "[concat(parameters('buildingBlocksRootUri'), 'templates/buildingBlocks/loadBalancer-backend-n-vm/azuredeploy.json')]",
        "multiVMs": "[concat(parameters('buildingBlocksRootUri'), 'templates/buildingBlocks/multi-vm-n-nic-m-storage/azuredeploy.json')]",
        "dmz": "[concat(parameters('buildingBlocksRootUri'), 'templates/buildingBlocks/dmz/azuredeploy.json')]",
        "vpn": "[concat(parameters('buildingBlocksRootUri'), 'templates/buildingBlocks/vpn-gateway-vpn-connection/azuredeploy.json')]",
        "networkSecurityGroups": "[concat(parameters('buildingBlocksRootUri'), 'templates/buildingBlocks/networkSecurityGroups/azuredeploy.json')]"
      },
      "parameter": {
        "virtualNetwork": "[concat(parameters('parameterRootUri'), 'virtualNetwork.parameters.json')]",
        "webSubnetLoadBalancerAndVMs": "[concat(parameters('parameterRootUri'), 'loadBalancer-web-subnet.parameters.json')]",
        "bizSubnetLoadBalancerAndVMs": "[concat(parameters('parameterRootUri'), 'loadBalancer-biz-subnet.parameters.json')]",
        "dataSubnetLoadBalancerAndVMs": "[concat(parameters('parameterRootUri'), 'loadBalancer-data-subnet.parameters.json')]",
        "mgmtSubnetVMs": "[concat(parameters('parameterRootUri'), 'virtualMachines-mgmt-subnet.parameters.json')]",
        "dmz": "[concat(parameters('parameterRootUri'), 'dmz.parameters.json')]",
        "vpn": "[concat(parameters('parameterRootUri'), 'vpn.parameters.json')]",
        "networkSecurityGroups": "[concat(parameters('parameterRootUri'), 'networkSecurityGroups.parameters.json')]"
      }
    },
    "parametersTemplate": "[concat(parameters('parameterRootUri'), '../parameterLink-resolver.json')]",
    "webParametersDeploymentName": "web-params-Deployment",
    "bizParametersDeploymentName": "biz-params-Deployment",
    "dataParametersDeploymentName": "data-params-Deployment",
    "mgmtParametersDeploymentName": "mgmt-params-Deployment",
    "dmzParametersDeploymentName": "dmz-params-Deployment",
    "vpnParametersDeploymentName": "vpn-params-Deployment"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-vnet-deployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.virtualNetwork]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.virtualNetwork]"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[variables('webParametersDeploymentName')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('parametersTemplate')]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.webSubnetLoadBalancerAndVMs]"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-web-lb-vms-deployment",
      "dependsOn": [
        "ra-vnet-deployment",
        "[variables('webParametersDeploymentName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.loadBalancer]"
        },
        "parameters": {
          "loadBalancerSettings": {
            "value": "[reference(variables('webParametersDeploymentName')).outputs.loadBalancerSettings.value]"
          },
          "virtualMachinesSettings": {
            "value": "[reference(variables('webParametersDeploymentName')).outputs.virtualMachinesSettings.value]"
          },
          "virtualNetworkSettings": {
            "value": "[reference(variables('webParametersDeploymentName')).outputs.virtualNetworkSettings.value]"
          },
          "buildingBlockSettings": {
            "value": "[reference(variables('webParametersDeploymentName')).outputs.buildingBlockSettings.value]"
          },
          "protectedSettings": {
            "value": {
              "adminPassword": "[parameters('adminPassword')]",
              "sshPublicKey": "[parameters('sshPublicKey')]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[variables('bizParametersDeploymentName')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('parametersTemplate')]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.bizSubnetLoadBalancerAndVMs]"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-biz-lb-vms-deployment",
      "dependsOn": [
        "ra-vnet-deployment",
        "[variables('bizParametersDeploymentName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.loadBalancer]"
        },
        "parameters": {
          "loadBalancerSettings": {
            "value": "[reference(variables('bizParametersDeploymentName')).outputs.loadBalancerSettings.value]"
          },
          "virtualMachinesSettings": {
            "value": "[reference(variables('bizParametersDeploymentName')).outputs.virtualMachinesSettings.value]"
          },
          "virtualNetworkSettings": {
            "value": "[reference(variables('bizParametersDeploymentName')).outputs.virtualNetworkSettings.value]"
          },
          "buildingBlockSettings": {
            "value": "[reference(variables('bizParametersDeploymentName')).outputs.buildingBlockSettings.value]"
          },
          "protectedSettings": {
            "value": {
              "adminPassword": "[parameters('adminPassword')]",
              "sshPublicKey": "[parameters('sshPublicKey')]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[variables('dataParametersDeploymentName')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('parametersTemplate')]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.dataSubnetLoadBalancerAndVMs]"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-data-lb-vms-deployment",
      "dependsOn": [
        "ra-vnet-deployment",
        "[variables('dataParametersDeploymentName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.loadBalancer]"
        },
        "parameters": {
          "loadBalancerSettings": {
            "value": "[reference(variables('dataParametersDeploymentName')).outputs.loadBalancerSettings.value]"
          },
          "virtualMachinesSettings": {
            "value": "[reference(variables('dataParametersDeploymentName')).outputs.virtualMachinesSettings.value]"
          },
          "virtualNetworkSettings": {
            "value": "[reference(variables('dataParametersDeploymentName')).outputs.virtualNetworkSettings.value]"
          },
          "buildingBlockSettings": {
            "value": "[reference(variables('dataParametersDeploymentName')).outputs.buildingBlockSettings.value]"
          },
          "protectedSettings": {
            "value": {
              "adminPassword": "[parameters('adminPassword')]",
              "sshPublicKey": "[parameters('sshPublicKey')]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[variables('mgmtParametersDeploymentName')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('parametersTemplate')]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.mgmtSubnetVMs]"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-mgmt-vms-deployment",
      "dependsOn": [
        "ra-vnet-deployment",
        "[variables('mgmtParametersDeploymentName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.multiVMs]"
        },
        "parameters": {
          "virtualMachinesSettings": {
            "value": "[reference(variables('mgmtParametersDeploymentName')).outputs.virtualMachinesSettings.value]"
          },
          "virtualNetworkSettings": {
            "value": "[reference(variables('mgmtParametersDeploymentName')).outputs.virtualNetworkSettings.value]"
          },
          "buildingBlockSettings": {
            "value": "[reference(variables('mgmtParametersDeploymentName')).outputs.buildingBlockSettings.value]"
          },
          "protectedSettings": {
            "value": {
              "adminPassword": "[parameters('adminPassword')]",
              "sshPublicKey": "[parameters('sshPublicKey')]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[variables('dmzParametersDeploymentName')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('parametersTemplate')]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.dmz]"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-dmz-deployment",
      "dependsOn": [
        "ra-vnet-deployment",
        "[variables('dmzParametersDeploymentName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.dmz]"
        },
        "parameters": {
          "dmzSettings": {
            "value": "[reference(variables('dmzParametersDeploymentName')).outputs.dmzSettings.value]"
          },
          "virtualNetworkSettings": {
            "value": "[reference(variables('dmzParametersDeploymentName')).outputs.virtualNetworkSettings.value]"
          },
          "protectedSettings": {
            "value": {
              "adminPassword": "[parameters('adminPassword')]",
              "sshPublicKey": "[parameters('sshPublicKey')]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[variables('vpnParametersDeploymentName')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('parametersTemplate')]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.vpn]"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-vpn-deployment",
      "dependsOn": [
        "ra-vnet-deployment",
        "[variables('vpnParametersDeploymentName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.vpn]"
        },
        "parameters": {
          "virtualNetworkSettings": {
            "value": "[reference(variables('vpnParametersDeploymentName')).outputs.virtualNetworkSettings.value]"
          },
          "virtualNetworkGatewaySettings": {
            "value": "[reference(variables('vpnParametersDeploymentName')).outputs.virtualNetworkGatewaySettings.value]"
          },
          "connectionSettings": {
            "value": "[reference(variables('vpnParametersDeploymentName')).outputs.connectionSettings.value]"
          },
          "protectedSettings": {
            "value": {
              "sharedKey": "[parameters('sharedKey')]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-nsg-deployment",
      "dependsOn": [
        "ra-vnet-deployment"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.networkSecurityGroups]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.networkSecurityGroups]"
        }
      }
    }
  ],
  "outputs": {
  }
}

